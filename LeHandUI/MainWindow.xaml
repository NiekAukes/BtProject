<Window x:Class="LeHandUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
	    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:LeHandUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" FontSize="20" FontFamily="Futura Lt BT">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" HorizontalAlignment="Center" FontSize="30" Margin="0,0,0,10" FontFamily="Futura Md BT"
                   Text="Bluetooth Hand Controller"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" FontFamily="Futura Hv BT"
                   Text="Lua Files"/>
        <!--De button icons zijn verstopt in de MainWindow.xaml.cs code, daar kun je de icons aanpassen-->
        <DockPanel Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" Margin="10,10,0,0">

            <Button Style="{StaticResource TranspButton}"
                x:Name="AddButton">
                <Image x:Name="PlusIcon" Height="auto" Width="auto" Stretch="UniformToFill"/>
            </Button>
            <Button Style="{StaticResource TranspButton}"
                x:Name="DeleteButton">
                <Image x:Name="DeleteIcon" Height="auto" Width="auto" Stretch="UniformToFill"/>
            </Button>
            <Button Style="{StaticResource TranspButton}"
                x:Name="RefreshButton">
                <Image x:Name="RefreshIcon" Height="auto" Width="auto" Stretch="UniformToFill"/>
            </Button>
        </DockPanel>
        <!--Dat waren alle buttons-->
        <TextBlock Grid.Column="5" Grid.Row="2" HorizontalAlignment="Left" Margin="20,10,0,0" 
                   Text="Lua Script Editor"/>
        <avalonEdit:TextEditor
            xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
            Name="textEditor" FontFamily="Consolas" 
            BorderThickness="1" BorderBrush="#212121" FontSize="12" 
            Grid.Column="5" Grid.Row="3" Grid.RowSpan="2" 
            Margin="20,0,0,0" xml:space="preserve">function Start()
    print("preview")
end
        </avalonEdit:TextEditor>
       
        
    
    </Grid>
    
</Window>
