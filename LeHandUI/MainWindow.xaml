        <Button
		Grid.Column="7" Name="minimizeButton" Click="MinimizeWindow" RenderOptions.EdgeMode="Aliased"
		Style="{StaticResource TitleBarButtonStyle}"  Grid.ColumnSpan="2" ToolTip="Minimize Window">
            <Path Width="46" Height="32" Data="M 18,15 H 28" Stroke="{Binding Path=Foreground,
							 RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			StrokeThickness="1" />

        </Button>
        <!--"M0,1 L9,1 L9,8 L0,8 Z"-->
        <Button Name="restoreButton" Grid.Column="9" Click="MaximizeWindow" Foreground="White"
		Style="{StaticResource TitleBarButtonStyle}" ToolTip="Change Window Mode (Fullscreen/Windowed)">
            <Path x:Name="restoreButonPath" Width="46" Height="32" Data="M 18.5,10.5 H 27.5 V 19.5 H 18.5 Z"
                  
			Stroke="{Binding Path=Foreground,
							 RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			StrokeThickness="1" />
        </Button>
        <Button
		Grid.Column="10" Name="closeButton" Click="CloseWindow" Foreground="White" Style="{StaticResource TitleBarCloseButtonStyle}">
            <Path Width="46" Height="32" Data="M 18,11 27,20 M 18,20 27,11" ToolTip="Close Program"
			Stroke="{Binding Path=Foreground,
							 RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			StrokeThickness="1" />
        </Button>
        <!--end of custom titlebar -->

        <DockPanel x:Name="MenuOptionsGrid" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="20,0,0,0">
            <Button Style="{StaticResource TranspButton}" Width="auto" Height="auto" 
                    Margin="0,0,5,0" x:Name="SimpleButton" Click="SimpleButton_Load" >
                <TextBox Text="Simple" Style="{StaticResource MenuText}"/>
            </Button>
            <Button Style="{StaticResource TranspButton}" Width="auto" Height="auto" 
                    Margin="0,0,5,0" x:Name="AdvancedButton" Click="AdvancedButton_Load" >
                <TextBox Text="Advanced" Style="{StaticResource MenuText}" />
            </Button>
            <Button Style="{StaticResource TranspButton}" Width="auto" Height="auto" 
                    Margin="0,0,0,0" x:Name="PresetsButton" Click="PresetsButton_Load" >
                <TextBox Text="Presets" Style="{StaticResource MenuText}"/>
            </Button>
        </DockPanel>
        
        <StackPanel x:Name="ViewSwitcher" Grid.Row="2" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="11" Margin="0,0,0,0">
            
            <local:AdvancedMode x:Name="AdvancedModeWindow"  Visibility="Visible"/>
            
        </StackPanel>



